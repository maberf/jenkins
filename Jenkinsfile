pipeline {

    agent any
    
    stages {
  
        stage("build") {
            steps {
                echo 'construindo a aplicação'
                echo 'aplicação sendo construída'
            }
        }

        stage("test") {
            steps {
                echo 'testando a aplicação'
            }
        }

        stage("deploy") {
            steps {
                echo 'implantando a aplicação'
            }
        }
    }   
}